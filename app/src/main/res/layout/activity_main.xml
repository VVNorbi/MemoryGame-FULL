<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="88dp"
        android:text="P1"
        android:textSize="48sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/p2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="30dp"
        android:text="P2"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soccerView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="80dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="0"
        android:textSize="48sp"
        app:layout_constraintStart_toEndOf="@+id/p1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soccerView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="56dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:text="0"
        android:textSize="48sp"
        app:layout_constraintEnd_toStartOf="@+id/p2"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="419dp"
        android:layout_height="551dp"
        app:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soccerView1"
        app:layout_constraintVertical_bias="1.0"
        app:rowCount="4">

        <ImageView
            android:id="@+id/im1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="40dp"
            android:padding="15dp"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/znak_zapytania" />

        <ImageView
            android:id="@+id/im2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="15dp"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/znak_zapytania" />

        <ImageView
            android:id="@+id/im3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="15dp"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0"
            app:srcCompat="@drawable/znak_zapytania" />

        <ImageView
            android:id="@+id/im4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="40dp"
            android:padding="15dp"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/znak_zapytania" />

        <ImageView
            android:id="@+id/im5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="15dp"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/znak_zapytania" />

        <ImageView
            android:id="@+id/im6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="15dp"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1"
            app:srcCompat="@drawable/znak_zapytania" />

        <ImageView
            android:id="@+id/im7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="40dp"
            android:padding="15dp"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/znak_zapytania" />

        <ImageView
            android:id="@+id/im8"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="15dp"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/znak_zapytania" />

        <ImageView
            android:id="@+id/im9"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="15dp"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="2"
            app:srcCompat="@drawable/znak_zapytania" />

        <ImageView
            android:id="@+id/im10"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="40dp"
            android:padding="15dp"
            android:tag="9"
            app:layout_column="0"
            app:layout_row="3"
            app:srcCompat="@drawable/znak_zapytania" />

        <ImageView
            android:id="@+id/im11"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="15dp"
            android:tag="10"
            app:layout_column="1"
            app:layout_row="3"
            app:srcCompat="@drawable/znak_zapytania" />

        <ImageView
            android:id="@+id/im12"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="15dp"
            android:tag="11"
            app:layout_column="2"
            app:layout_row="3"
            app:srcCompat="@drawable/znak_zapytania" />


    </androidx.gridlayout.widget.GridLayout>

    <Button
        android:id="@+id/playagain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Zagraj jeszcze raz"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/soccerend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:textColor="#F80202"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>